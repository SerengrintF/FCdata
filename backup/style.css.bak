        position: relative;
        overflow: hidden;
    }

    .team-detail-panel .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(90deg, #00d4aa 0%, #00b894 100%);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .team-detail-panel .stat-card:hover {
        border-color: #00d4aa;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 212, 170, 0.2);
    }

    .team-detail-panel .stat-card:hover::before {
        transform: scaleX(1);
    }

    .team-detail-panel .stat-card .stat-label {
        color: #b3b3b3;
        font-size: 12px;
        font-weight: 500;
        margin-bottom: 6px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .team-detail-panel .stat-card .stat-value {
        color: #ffffff;
        font-size: 16px;
        font-weight: 700;
        line-height: 1;
    }

    .stat-value.high {
        color: #00d4aa;
    }

    .stat-value.medium {
        color: #ffa502;
    }

    .stat-value.low {
        color: #ff4757;
    }

    /* 대시보드 승률 색상 */
    .summary-value.high {
        color: #00d4aa;
    }

    .summary-value.medium {
        color: #ffa502;
    }

    .summary-value.low {
        color: #ff4757;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* 반응형 디자인 */
    @media (max-width: 768px) {
        .team-detail-panel .team-stats-cards {
            gap: 8px;
        }

        .team-detail-panel .stat-card {
            min-width: 70px;
            padding: 10px 12px;
        }

        .team-detail-panel .stat-card .stat-value {
            font-size: 14px;
        }

        .team-detail-panel .stat-card .stat-label {
            font-size: 11px;
        }

        .team-detail-panel .team-stats-title {
            font-size: 16px;
        }
    }

    @media (max-width: 480px) {
        .team-detail-panel .team-stats-cards {
            flex-direction: column;
            gap: 8px;
        }

        .team-detail-panel .stat-card {
            min-width: auto;
            width: 100%;
        }
    }

/* 포메이션 분석 탭 스타일 */
.formation-data-container {
    padding: 0;
}

.formation-data-content {
    padding: 20px;
}

.formation-layout {
    display: flex;
    flex-direction: column;
    gap: 32px;
}

.formation-performance-section,
.formation-groups-section {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 24px;
    box-shadow: var(--shadow-sm);
}

.section-header {
    margin-bottom: 20px;
    text-align: center;
}

.section-header h3 {
    font-size: 20px;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 8px;
}

.section-subtitle {
    font-size: 13px;
    color: var(--text-secondary);
    margin: 0;
}

/* 포메이션별 성과 슬라이더 */
.formation-performance-slider-container {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 20px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
}

.formation-performance-slider {
    flex: 1;
    overflow: hidden;
    position: relative;
    order: 2;
}

.formation-performance-track {
    display: flex;
    gap: 16px;
    transition: transform var(--transition-normal);
    will-change: transform;
    width: 100%;
}

.formation-performance-slide {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
    flex: 0 0 100%;
    min-width: 0;
    padding: 0 8px; /* 좌우 여백 추가 */
}

/* 포메이션 슬라이더 버튼 - 구단별 데이터와 동일한 스타일 */
.formation-slider-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    cursor: pointer;
    transition: all var(--transition-fast);
    flex-shrink: 0;
}

.formation-slider-btn:hover:not(:disabled) {
    background: var(--bg-accent);
    color: var(--text-inverse);
    border-color: var(--bg-accent);
    transform: scale(1.05);
}

.formation-slider-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    background: var(--bg-secondary);
    color: var(--text-muted);
}

.formation-slider-btn svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
}

#formationSliderPrevBtn {
    order: 1;
}

#formationSliderNextBtn {
    order: 3;
}

.formation-performance-card {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 16px;
    transition: all var(--transition-normal);
    cursor: pointer;
    position: relative;
    overflow: hidden;
    min-height: 120px; /* 최소 높이 설정 */
}

.formation-performance-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--border-accent);
}

.formation-performance-card.selected {
    border-color: var(--accent-color);
    background: var(--bg-accent-light);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.formation-performance-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--bg-accent), #00b894);
    opacity: 0;
    transition: opacity var(--transition-normal);
}

.formation-performance-card:hover::before {
    opacity: 1;
}

.formation-performance-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
}

.formation-name {
    font-size: 24px;
    font-weight: 700;
    color: var(--text-accent);
}

.formation-match-count {
    font-size: 13px;
    color: var(--text-secondary);
    background: var(--bg-secondary);
    padding: 4px 10px;
    border-radius: var(--radius-sm);
}

.formation-performance-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
    margin-top: 16px;
}

.formation-stat-item {
    text-align: center;
    padding: 10px;
    background: var(--bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
    transition: all var(--transition-fast);
}

.formation-performance-card:hover .formation-stat-item {
    background: var(--bg-card);
    border-color: var(--border-hover);
}

.formation-stat-label {
    font-size: 11px;
    color: var(--text-secondary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
    display: block;
}

.formation-stat-value {
    font-size: 16px;
    font-weight: 700;
    color: var(--text-primary);
}

.formation-stat-value.good {
    color: var(--text-success);
}

.formation-stat-value.bad {
    color: var(--text-error);
}

/* 포메이션 그룹 카드 */
.formation-groups-container {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.formation-group-card {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 20px;
    transition: all var(--transition-normal);
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.formation-group-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--border-accent);
}

.formation-group-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--bg-accent), #00b894);
    opacity: 0;
    transition: opacity var(--transition-normal);
}

.formation-group-card:hover::before {
    opacity: 1;
}

.formation-group-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
}

.formation-group-title {
    display: flex;
    align-items: center;
    gap: 12px;
}

.formation-group-name {
    font-size: 20px;
    font-weight: 700;
    color: var(--text-accent);
}

.formation-group-match-count {
    font-size: 12px;
    color: var(--text-secondary);
    background: var(--bg-secondary);
    padding: 4px 8px;
    border-radius: var(--radius-sm);
}

.formation-group-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    gap: 12px;
    margin-bottom: 16px;
}

.formation-group-stat {
    text-align: center;
    padding: 8px;
    background: var(--bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
}

.formation-group-stat-label {
    font-size: 10px;
    color: var(--text-secondary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
    display: block;
}

.formation-group-stat-value {
    font-size: 14px;
    font-weight: 700;
    color: var(--text-primary);
}

.formation-group-players {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 12px;
    padding-top: 12px;
    border-top: 1px solid var(--border-color);
}

.formation-group-player {
    font-size: 11px;
    color: var(--text-secondary);
    background: var(--bg-secondary);
    padding: 4px 8px;
    border-radius: var(--radius-sm);
    border: 1px solid var(--border-color);
    transition: all var(--transition-fast);
}

.formation-group-card:hover .formation-group-player {
    background: var(--bg-card);
    border-color: var(--border-hover);
}

/* 포메이션 그룹 가이드 */
.formation-groups-guide {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    padding: 20px;
    text-align: center;
    margin: 20px auto;
    max-width: 600px;
}

.formation-groups-guide .guide-icon {
    font-size: 35px;
    opacity: 0.6;
}

.formation-groups-guide .guide-content h4 {
    font-size: 18px;
    color: var(--text-primary);
    margin: 0 0 8px 0;
}

.formation-groups-guide .guide-content p {
    font-size: 14px;
    color: var(--text-secondary);
    margin: 0 0 8px 0;
}

.formation-groups-guide .guide-content .guide-subtitle {
    font-size: 12px;
    color: var(--text-muted);
    font-style: italic;
}

/* 데이터 없음 */
.no-formation-data {
    text-align: center;
    padding: 60px 20px;
    color: var(--text-muted);
}

.no-formation-data .no-data-icon {
    font-size: 48px;
    margin-bottom: 16px;
    opacity: 0.5;
}

.no-formation-data h4 {
    font-size: 18px;
    margin-bottom: 12px;
    color: var(--text-primary);
    font-weight: 700;
}

.no-formation-data p {
    font-size: 14px;
    color: var(--text-secondary);
    margin: 0;
}

/* 반응형 디자인 */
@media (max-width: 768px) {
    .formation-performance-slider-container {
        padding: 16px;
        gap: 12px;
    }
    
    .formation-performance-slide {
        grid-template-columns: 1fr;
        gap: 12px;
        padding: 0 4px;
    }
    
    .formation-slider-btn {
        width: 40px;
        height: 40px;
    }
    
    .formation-slider-btn svg {
        width: 16px;
        height: 16px;
    }
    
    .formation-performance-card {
        padding: 12px;
        min-height: 100px;
    }
    
    .formation-performance-stats {
        grid-template-columns: repeat(3, 1fr);
        gap: 8px;
    }
}

@media (max-width: 480px) {
    .formation-performance-slider-container {
        padding: 12px;
        gap: 8px;
    }
    
    .formation-slider-btn {
        width: 36px;
        height: 36px;
    }
    
    .formation-slider-btn svg {
        width: 14px;
        height: 14px;
    }
    
    .formation-performance-card {
        padding: 10px;
        min-height: 90px;
    }
    
    .formation-performance-slide {
        padding: 0 2px;
    }
    
    .formation-groups-guide {
        flex-direction: column;
        padding: 16px;
        gap: 12px;
        max-width: 90%;
    }
    
    .formation-groups-guide .guide-icon {
        font-size: 32px;
    }
    
    .formation-groups-guide .guide-content h4 {
        font-size: 16px;
    }
    
    .formation-groups-guide .guide-content p {
        font-size: 13px;
    }
    
    .formation-group-stats {
        grid-template-columns: repeat(2, 1fr);
        gap: 8px;
    }
    
    .formation-performance-section,
    .formation-groups-section {
        padding: 16px;
    }
}

@media (max-width: 480px) {
    .formation-name {
        font-size: 20px;
    }
    
    .formation-group-name {
        font-size: 18px;
    }
    
    .formation-performance-stats {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .formation-group-stats {
        grid-template-columns: 1fr;
    }
    
    .section-header h3 {
        font-size: 18px;
    }
}

/* 포메이션 상세 컨테이너 */
.formation-detail-container {
    width: 100%;
}

.formation-detail-header {
    margin-bottom: 20px;
}

.formation-detail-header h3 {
    font-size: 24px;
    font-weight: 700;
    color: #ffffff;
    display: flex;
    align-items: center;
    gap: 12px;
}

.formation-match-count {
    font-size: 12px;
    color: var(--text-secondary);
    background: var(--bg-secondary);
    padding: 4px 8px;
    border-radius: var(--radius-sm);
    font-weight: 500;
}

/* 상대 포메이션 슬라이더 */
.opponent-formation-slider-container {
    position: relative;
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 24px;
}

.opponent-slider-btn {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-normal);
    color: var(--text-primary);
}

.opponent-slider-btn:hover:not(:disabled) {
    background: var(--bg-tertiary);
    border-color: var(--border-accent);
    transform: scale(1.05);
}

.opponent-slider-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
}

.opponent-formation-slider {
    flex: 1;
    overflow: hidden;
    position: relative;
}

.opponent-formation-track {
    display: flex;
    gap: 12px;
    transition: transform 0.3s ease;
}

.opponent-formation-box {
    flex-shrink: 0;
    min-width: 140px;
    padding: 16px;
    background: var(--bg-tertiary);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-normal);
    text-align: center;
}

.opponent-formation-box:hover {
    border-color: var(--border-accent);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.opponent-formation-box.active {
    border: 2px solid var(--bg-accent);
    background: linear-gradient(135deg, var(--bg-accent-light), var(--bg-card));
    box-shadow: 0 8px 25px rgba(0, 212, 170, 0.2);
}

.opponent-formation-name {
    font-size: 18px;
    font-weight: 700;
    color: var(--text-accent);
    margin-bottom: 8px;
}

.opponent-formation-box.active .opponent-formation-name {
    color: var(--text-accent);
    font-weight: 800;
}

.opponent-formation-count {
    font-size: 13px;
    color: var(--text-secondary);
}

.opponent-formation-box.active .opponent-formation-count {
    color: var(--text-accent);
}

.formation-detail-content {
    min-height: 200px;
    padding: 20px;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
}

/* 반응형 */
@media (max-width: 768px) {
    .opponent-formation-box {
        min-width: 120px;
        padding: 12px;
    }
    
    .opponent-formation-name {
        font-size: 16px;
    }
    
    .opponent-formation-count {
        font-size: 12px;
    }
    
    .formation-detail-header h3 {
        font-size: 20px;
    }
}
